pipeline {
    agent any

    stages {

        stage('Clone du projet') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.57.0-noble'
                    args '--user=root --entrypoint=""'
                }
            }
            steps {
                sh 'rm -rf rep'
                sh 'git clone https://github.com/admanehocine/PlaywrightJenkins.git rep'
                dir('rep') {
                    sh 'npm ci'
                }
            }
        }

        stage('Lancement jobs parallèles') {
            parallel {

                stage('Pushplaywright') {
                    steps {
                        build job: 'Pushplaywright'
                    }
                }

                stage('jobJenkinsfile2') {
                    steps {
                        build job: 'jobJenkinsfile2'
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'Tous les jobs parallèles ont réussi'
        }
        failure {
            echo ' Un job parallèle a échoué'
        }
    }
}
